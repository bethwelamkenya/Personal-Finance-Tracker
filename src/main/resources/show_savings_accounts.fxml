<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" spacing="10.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.ShowSavingsAccountsController">
    <Text fx:id="savingsGoalsTitle" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title" text="Savings Goals for Account">
        <VBox.margin>
            <Insets />
        </VBox.margin>
    </Text>
    <TableView fx:id="savingsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID">
                <cellValueFactory>
                    <PropertyValueFactory property="id" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="goalColumn" text="Goal">
                <cellValueFactory>
                    <PropertyValueFactory property="goalName" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="targetColumn" text="Target">
                <cellValueFactory>
                    <PropertyValueFactory property="targetAmount" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="amountColumn" text="Amount">
                <cellValueFactory>
                    <PropertyValueFactory property="savedAmount" />
                </cellValueFactory>
            </TableColumn>
        </columns>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
    </TableView>
    <Button fx:id="closeButton" mnemonicParsing="false" text="Close">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </Button>

</VBox>
