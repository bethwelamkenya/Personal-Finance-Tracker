<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.ConfirmationPopupController">
   <Label fx:id="messageLabel" styleClass="form-label">
      <VBox.margin>
         <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
      </VBox.margin>
   </Label>
   <HBox alignment="CENTER" spacing="20.0">
      <Button fx:id="yesButton" mnemonicParsing="false" text="Yes" />
      <Button fx:id="noButton" mnemonicParsing="false" text="No" />
   </HBox>
</VBox>
