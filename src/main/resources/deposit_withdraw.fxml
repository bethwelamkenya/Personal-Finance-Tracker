<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="CENTER" spacing="10.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.DepositWithdrawController">
   <children>
      <Label fx:id="messageLabel" styleClass="form-label">
         <VBox.margin>
            <Insets left="20.0" right="20.0" top="10.0" />
         </VBox.margin>
      </Label>
      <HBox fx:id="amountBox" alignment="CENTER">
         <children>
            <Label fx:id="amountLabel" styleClass="form-label" text="Amount" />
            <TextField fx:id="amountField" />
         </children>
         <VBox.margin>
            <Insets left="20.0" right="20.0" />
         </VBox.margin>
      </HBox>
      <HBox fx:id="descriptionBox" alignment="CENTER">
         <children>
            <Label fx:id="descriptionLabel" styleClass="form-label" text="Description" />
            <TextField fx:id="descriptionField" />
         </children>
         <VBox.margin>
            <Insets left="20.0" right="20.0" />
         </VBox.margin>
      </HBox>
      <Button fx:id="actionButton" mnemonicParsing="false">
         <VBox.margin>
            <Insets bottom="20.0" top="10.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
