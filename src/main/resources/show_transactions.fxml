<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" spacing="10.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.ShowTransactionsController">
    <Text fx:id="transactionsTitle" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title" text="Transactions for Account">
        <VBox.margin>
            <Insets />
        </VBox.margin>
    </Text>
    <TableView fx:id="transactionTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID">
                <cellValueFactory>
                    <PropertyValueFactory property="id" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="accountColumn" text="Account">
                <cellValueFactory>
                    <PropertyValueFactory property="account" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="dateColumn" text="Date">
                <cellValueFactory>
                    <PropertyValueFactory property="date" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="typeColumn" text="Type">
                <cellValueFactory>
                    <PropertyValueFactory property="type" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="descriptionColumn" text="Description">
                <cellValueFactory>
                    <PropertyValueFactory property="description" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="amountColumn" text="Amount">
                <cellValueFactory>
                    <PropertyValueFactory property="amount" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    <HBox alignment="CENTER_RIGHT">
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Balance:"/>
        <Label fx:id="balanceLabel" styleClass="form-label"/>
    </HBox>
    <Button fx:id="closeButton" mnemonicParsing="false" text="Close">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </Button>

</VBox>
