<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" minHeight="290.0" minWidth="345.0" spacing="10.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.SendMoneyController">
    <children>
        <Label fx:id="messageLabel" styleClass="form-label" text="Send Money">
            <VBox.margin>
                <Insets left="20.0" right="20.0" top="10.0" />
            </VBox.margin>
        </Label>
      <HBox fx:id="recipientBox" alignment="CENTER" spacing="12.0">
         <VBox.margin>
            <Insets left="20.0" right="20.0" />
         </VBox.margin>
         <children>
            <Label fx:id="recipientLabel" styleClass="form-label" text="Recipient" />
            <TextField fx:id="recipientField" />
            <Button fx:id="checkButton" mnemonicParsing="false" text="Check" />
            <CheckBox fx:id="checkRecipient" disable="true" mnemonicParsing="false" />
         </children>
      </HBox>
        <HBox fx:id="amountBox" alignment="CENTER_LEFT" spacing="20.0">
            <children>
                <Label fx:id="amountLabel" styleClass="form-label" text="Amount" />
                <TextField fx:id="amountField" />
            </children>
            <VBox.margin>
                <Insets left="20.0" right="20.0" />
            </VBox.margin>
        </HBox>
        <HBox fx:id="descriptionBox" alignment="CENTER_LEFT">
            <children>
                <Label fx:id="descriptionLabel" styleClass="form-label" text="Description" />
                <TextField fx:id="descriptionField" />
            </children>
            <VBox.margin>
                <Insets left="20.0" right="20.0" />
            </VBox.margin>
        </HBox>
        <Button fx:id="sendButton" mnemonicParsing="false" text="Send Money">
            <VBox.margin>
                <Insets bottom="20.0" top="10.0" />
            </VBox.margin>
        </Button>
    </children>
</VBox>
